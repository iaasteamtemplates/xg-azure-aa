{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "interfaceName": {
            "type": "string"
        },
        "subnetRef": {
            "type": "string"
        },
        "lbBackendID": {
            "type": "string"
        },
        "inboundNatID": {
            "type": "string"
        },
        "inboundNatSshID": {
            "type": "string"
        },
		"XgAliasIpId": {
            "type": "string"
        },
        "networkSecurityGroupId": {
            "type": "string"
        }
    },
    "resources": [
        {
            "apiVersion": "2016-03-30",
            "type": "Microsoft.Network/networkInterfaces",
            "name": "[parameters('interfaceName')]",
            "location": "[resourceGroup().location]",
            "properties": {
                "networkSecurityGroup": {
                    "id": "[parameters('networkSecurityGroupId')]"
                },
                "ipConfigurations": [
                    {
                        "name": "ipconfig1",
                        "properties": {
                            "privateIPAllocationMethod": "Dynamic",
							"primary": true,
                            "subnet": {
                                "id": "[parameters('subnetRef')]"
                            },
                            "loadBalancerBackendAddressPools": [
                                {
                                    "id": "[parameters('lbBackendID')]"
                                }
                            ],
                            "loadBalancerInboundNatRules": [
                                {
                                    "id": "[parameters('inboundNatID')]"
                                },
                                {
                                    "id": "[parameters('inboundNatSshID')]"
                                }
                            ]
                        }
                    }
					{
                        "name": "ipconfig2",
                        "properties": {
                            "privateIPAllocationMethod": "Dynamic",
                            "publicIPAddress": {
                                "id": "[parameters('XgAliasIpId')]"
                            },
                            "subnet": {
                                "id": "[parameters('subnetRef')]"
                            }
                        }
                    }
                ],
                "enableIPForwarding": true
            }
        }
    ],
    "outputs": {
        "interfaceRef": {
            "value": "[resourceId('Microsoft.Network/networkInterfaces',parameters('interfaceName'))]",
            "type": "string"
        },
		,
        "XgAliasIp": {
            "value": "[reference(parameters('interfaceName')).ipConfigurations[1].properties.privateIPAddress]",
            "type": "string"
        }
    }
}
