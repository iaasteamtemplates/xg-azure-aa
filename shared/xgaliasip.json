{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "XgAliasIPName": {
            "type": "string"
        },
        "XgAliasIpDns": {
            "type": "string"
        },
        "publicIpRGName": {
            "type": "string"
        }
    },
    "resources": [
        {
            "apiVersion": "2017-08-01",
            "type": "Microsoft.Network/publicIPAddresses",
            "name": "[parameters('XgAliasIPName')]",
            "location": "[resourceGroup().location]",
			"sku":
            {
                "name": "Standard"
            },
            "properties": {
                "publicIPAllocationMethod": "Static",
				"dnsSettings": {
                    "domainNameLabel": "[parameters('XgAliasIpDns')]"
                }
            }
        }
    ],
    "outputs": {
        "XgAliasIpId": {
            "value": "[resourceId(concat('Microsoft.Network','/','publicIPAddresses'),parameters('XgAliasIPName'))]",
            "type": "string"
        },
        "XgAliasIpFqdn": {
            "value": "[reference(resourceId('Microsoft.Network/publicIPAddresses',parameters('XgAliasIPName')),'2016-06-01').dnsSettings.fqdn]",
            "type": "string"
        }
    }
}